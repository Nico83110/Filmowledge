# 1. Tout film doit avoir un titre
sh:nodeShape
    sh:targetClass movie:Movie ;
    sh:property [
        sh:path movie:Title ;
        sh:minCount 1
    ] .

# 2. Tout film doit avoir au moins un genre
sh:nodeShape
    sh:targetClass movie:Movie ;
    sh:property [
        sh:path movie:hasGenre ;
        sh:minCount 1
    ] .

# 3. Tout film doit être lié à un réalisateur
sh:nodeShape
    sh:targetClass movie:Movie ;
    sh:property [
        sh:path movie:DirectedBy ;
        sh:minCount 1
    ] .

# 4. Tout film doit être lié à au moins un acteur
sh:nodeShape
    sh:targetClass movie:Movie ;
    sh:property [
        sh:path movie:ActsIn ;
        sh:minCount 1
    ] .

# 5. Tous les genres doivent avoir un label
sh:nodeShape
    sh:targetClass movie:Genre ;
    sh:property [
        sh:path rdfs:label ;
        sh:minCount 1
    ] .

# 6. Tous les acteurs doivent avoir un nom
sh:nodeShape
    sh:targetClass movie:Actor ;
    sh:property [
        sh:path rdfs:label ;
        sh:minCount 1
    ] .

# 7. Tous les réalisateurs doivent avoir un nom
sh:nodeShape
    sh:targetClass movie:Director ;
    sh:property [
        sh:path rdfs:label ;
        sh:minCount 1
    ] .

# 8. Tous les films doivent avoir une date de sortie
sh:nodeShape
    sh:targetClass movie:Movie ;
    sh:property [
        sh:path movie:releasedOn;
        sh:minCount 1;
        sh:datatype xsd:date
    ] .